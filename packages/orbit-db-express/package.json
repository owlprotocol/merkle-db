{
  "name": "@owlprotocol/orbit-db-express",
  "version": "0.1.5",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/owlprotocol/orbit-db-express.git"
  },
  "homepage": "https://owlprotocol.github.io/orbit-db-express",
  "copyright": "Copyright 2021 Owl Protocol",
  "license": "MIT",
  "files": [
    "*",
    "!test",
    "!./**/*.test.*"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "publishConfig": {
    "directory": "lib"
  },
  "scripts": {
    "clean": "rimraf lib",
    "test": "cross-env NODE_ENV=test mocha 'lib/**/*.test.js'",
    "start": "node lib/index.js",
    "build": "npm-run-all tsc copy",
    "tsc": "tsc",
    "tsc:watch": "tsc -w",
    "copy": "npm-run-all copy:prepublish",
    "copy:prepublish": "mkdir -p lib && cp package.json lib/ && cp README.md lib/ && cp LICENSE lib/",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "lint:staged": "lint-staged",
    "prepublishOnly": "npm run test",
    "docker:build": "docker build . -t orbit-db-express",
    "docker:run": "docker run --network host --env-file .env orbit-db-express"
  },
  "dependencies": {
    "body-parser": "^1.19.2",
    "cbor": "^8.1.0",
    "ethers": "^5.6.1",
    "express": "^4.17.3",
    "ipfs": "^0.62.1",
    "ipfs-http-client": "^56.0.1",
    "lodash": "^4.17.21",
    "merkletreejs": "^0.2.31",
    "orbit-db": "^0.28.3",
    "orbit-db-identity-provider": "^0.4.0",
    "orbit-db-store": "^4.3.3",
    "web3": "^1.7.1",
    "web3-eth-contract": "^1.7.1",
    "web3-utils": "^1.7.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.11.26",
    "@types/orbit-db": "npm:@leovigna/orbit-db-types@^1.0.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^3.4.1",
    "ganache": "^7.0.3",
    "lint-staged": "^11.2.6",
    "mocha": "^9.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2"
  }
}
